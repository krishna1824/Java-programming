import java.util.Scanner;
public class invertpyramid 
{
	public static void main(String[] args) 
	{
        Scanner scanner = new Scanner(System.in);
		System.out.print("enter number:");
        int n = scanner.nextInt();
        for(int j=1;j<=n;j++)
        {
          for(int i=1;i<=j;i++)
           {
              System.out.print(j);
           }
            System.out.println();
           }
           for(int j=n-1;j>=1;j--)
            {
               for(int i=1;i<=j;i++)
                {            
                  System.out.print(j);
                 }
              System.out.println();
            }
        }

}
